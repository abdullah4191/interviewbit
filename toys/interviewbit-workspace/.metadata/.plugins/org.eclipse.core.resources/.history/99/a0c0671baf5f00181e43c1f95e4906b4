package codeScratch;

public class SqrtSolution {
	
	public int sqrt(int a) {
		if(a==0)return 0;
		for(int i=1;i<a/2;i++){
	        if(a/i==i)return i;
			if(i*i>a)return i-1;
	    }
		return 1;
	}
	

    public  int floorSqrt(int x)
    {
        // Base Cases
        if (x == 0 || x == 1)
            return x;
 
        // Do Binary Search for floor(sqrt(x))
        double start = 1, end = x, ans=0;
        while (start <= end)
        {
            double mid = (start + end) / 2;
 
            // If x is a perfect square
            if (mid*mid == x)
                return (int)mid;
 
            // Since we need floor, we update answer when mid*mid is
            // smaller than x, and move closer to sqrt(x)
            if (mid*mid < x)
            {
                start = mid + 1;
                ans = mid;
            }
            else   // If mid*mid is greater than x
                end = mid - 1;
        }
        return ans;
    }

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		SqrtSolution instance = new SqrtSolution();
		System.out.println(instance.sqrt(530751374));
		System.out.println(instance.floorSqrt(530751374));
	}

}
